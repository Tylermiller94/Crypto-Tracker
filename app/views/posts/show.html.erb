    <div class="row">
      <div class="columns large-12">
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Back', posts_path %>
      </div>
    </div>
  </div>
  <div class="right-content">
    
  </div>
</div>
