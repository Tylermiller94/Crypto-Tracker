<p id="notice"><%= notice %></p>
<div class="parent">
  <div class="left-content">
    
  </div>
  <div class="middle-content">
    <div class="row">
      <div class="columns large-12">
        <p>
          <strong>Title:</strong>
          <%= @post.title %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="columns large-12">
        <p>
          <strong>Body:</strong>
          <%= @post.body %>
